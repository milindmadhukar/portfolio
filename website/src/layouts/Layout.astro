---
import "../styles/global.css";
import { personalInfo } from "../lib/constants";
import ThemeSwitcher from "../components/ThemeSwitcher.tsx";

interface Props {
    title?: string;
    description?: string;
    includePadding?: boolean;
    image?: string;
    bodyClass?: string;
}

const {
    title = `${personalInfo.name} â€” Developer & DevOps Enthusiast`,
    description = personalInfo.tagline,
    includePadding = true,
    image = `${Astro.site}favicon.ico`,
    bodyClass = "",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="/favicon.ico" type="image/x-icon" />
        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>
        <meta name="description" content={description} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={image} />
        <meta property="og:site_name" content={personalInfo.name} />
        <meta property="og:locale" content="en_US" />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content={Astro.url} />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={image} />
        <meta name="twitter:creator" content="@milind_1504" />
        <meta name="twitter:site" content="@milind_1504" />

        <!-- WhatsApp / Telegram -->
        <meta property="og:image:alt" content={title} />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />

        <!-- Additional SEO -->
        <meta name="author" content={personalInfo.name} />
        <meta name="theme-color" content="#8b5cf6" />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />

        <!-- Theme initialization script to prevent FOUC -->
        <script is:inline>
            // Run immediately to prevent flash of unstyled content
            (function () {
                const theme = localStorage.getItem("theme");
                if (theme === "latte") {
                    document.documentElement.classList.add("latte");
                } else if (theme === "mocha") {
                    document.documentElement.classList.remove("latte");
                } else {
                    // No stored preference, check system preference
                    const prefersDark = window.matchMedia(
                        "(prefers-color-scheme: dark)",
                    ).matches;
                    if (!prefersDark) {
                        document.documentElement.classList.add("latte");
                    }
                }
            })();
        </script>
    </head>
    <body
        class={`antialiased min-h-screen bg-ctp-crust text-ctp-text transition-colors duration-300 overflow-x-hidden ${bodyClass}`}
    >
        <ThemeSwitcher client:load />
        <div class={includePadding ? "p-8" : "p-0"}>
            <slot />
        </div>
    </body>
</html>
