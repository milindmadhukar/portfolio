---
interface Props {
    command: string;
    typingSpeed?: number;
    startDelay?: number;
    id?: string;
    onCompleteEventName?: string;
    triggerEventName?: string;
    cursorWidth?: string;
    cursorHeight?: string;
}

import VimCursor from "./VimCursor.astro";

const {
    command,
    typingSpeed = 50,
    startDelay = 200,
    id = "terminal-command",
    onCompleteEventName = "terminal-typing-complete",
    triggerEventName,
    cursorWidth = "10px",
    cursorHeight = "1.25em",
} = Astro.props;
---

<span class="inline-flex items-center">
    <span id={`${id}-text`} class="text-ctp-text whitespace-pre"></span>
    <span id={`${id}-cursor`}
        ><VimCursor width={cursorWidth} height={cursorHeight} /></span
    >
</span>

<script
    define:vars={{
        command,
        typingSpeed,
        startDelay,
        id,
        onCompleteEventName,
        triggerEventName,
    }}
>
    const textElement = document.getElementById(`${id}-text`);
    const cursorElement = document.getElementById(`${id}-cursor`);
    let i = 0;
    let started = false;

    function type() {
        if (!started) {
            started = true;
            // Ensure cursor is visible when typing starts
            if (cursorElement) cursorElement.style.display = "inline-block";
        }

        if (i < command.length) {
            if (textElement) textElement.textContent += command.charAt(i);
            i++;
            setTimeout(type, typingSpeed + Math.random() * 30);
        } else {
            // Dispatch completion event
            const event = new CustomEvent(onCompleteEventName, {
                detail: { commandId: id },
            });
            window.dispatchEvent(event);
        }
    }

    if (triggerEventName) {
        window.addEventListener(triggerEventName, (e) => {
            // Optional: verify target if multiple commands listen to same event type but different details?
            // For now assume unique event names or broadcast.
            // Reset if needed?
            if (textElement) textElement.textContent = "";
            i = 0;
            started = false;
            setTimeout(type, startDelay);
        });
    } else {
        setTimeout(type, startDelay);
    }
</script>
