---
import Layout from '../layouts/Layout.astro';
import { personalInfo, projects, experience, education, skills } from '../data/portfolio';
---

<Layout>
  <!-- Section Navigator -->
  <nav id="section-nav" class="fixed left-6 top-1/2 -translate-y-1/2 z-40 hidden lg:flex flex-col gap-3">
    {['hero', 'about', 'projects', 'experience', 'education', 'skills'].map((section) => (
      <a
        href={`#${section}`}
        class="group relative w-3 h-3 rounded-full bg-[var(--border-color)] hover:bg-cyber-blue transition-all duration-300"
        aria-label={`Go to ${section} section`}
      >
        <span class="absolute left-6 top-1/2 -translate-y-1/2 px-3 py-1 bg-[var(--bg-elevated)] border border-[var(--border-color)] rounded text-xs whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
          {section.charAt(0).toUpperCase() + section.slice(1)}
        </span>
      </a>
    ))}
  </nav>

  <!-- Main Container -->
  <main class="relative">
    <!-- Hero Section -->
    <section id="hero" class="min-h-screen flex items-center justify-center relative cyber-grid overflow-hidden">
      <!-- Scanline effect -->
      <div class="scanlines absolute inset-0 pointer-events-none opacity-30"></div>
      
      <!-- Animated background shapes -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-cyber-blue/5 rounded-full blur-3xl animate-pulse-glow"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyber-purple/5 rounded-full blur-3xl animate-pulse-glow" style="animation-delay: 0.5s"></div>
      </div>

      <div class="relative z-10 max-w-6xl mx-auto px-6 py-20 text-center">
        <!-- Name with cyber text effect -->
        <h1 class="text-6xl md:text-8xl font-black mb-6 tracking-tight">
          <span class="cyber-text">MILIND MADHUKAR</span>
        </h1>

        <!-- Tagline -->
        <p class="text-xl md:text-2xl text-[var(--text-secondary)] mb-8 font-medium">
          {personalInfo.tagline}
        </p>

        <!-- Bio -->
        <p class="max-w-2xl mx-auto text-lg text-[var(--text-tertiary)] mb-12 leading-relaxed">
          {personalInfo.bio.short}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap items-center justify-center gap-4 mb-16">
          <a
            href="#about"
            class="px-8 py-3 bg-cyber-blue/10 border-2 border-cyber-blue text-cyber-blue rounded-lg font-semibold hover-glow hover:bg-cyber-blue/20 transition-all duration-300"
          >
            About Me
          </a>
          <a
            href="/blog"
            class="px-8 py-3 bg-cyber-purple/10 border-2 border-cyber-purple text-cyber-purple rounded-lg font-semibold hover-glow hover:bg-cyber-purple/20 transition-all duration-300"
          >
            Read My Blog
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex flex-wrap items-center justify-center gap-4">
          {personalInfo.social.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class={`group px-6 py-3 rounded-lg border border-[var(--border-color)] bg-[var(--bg-elevated)] hover:border-${link.color} transition-all duration-300 hover-glow`}
              aria-label={link.name}
            >
              <div class="flex items-center gap-2">
                <span class={`text-sm font-medium text-[var(--text-secondary)] group-hover:text-${link.color} transition-colors`}>
                  {link.name}
                </span>
                {link.description && (
                  <span class="text-xs text-[var(--text-tertiary)]">({link.description})</span>
                )}
              </div>
            </a>
          ))}
        </div>

        <!-- Scroll indicator -->
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
          <svg class="w-6 h-6 text-[var(--text-tertiary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="min-h-screen flex items-center py-20 px-6 bg-[var(--bg-secondary)]">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl md:text-6xl font-black mb-8 cyber-text">About Me</h2>
        
        <div class="space-y-6 text-lg text-[var(--text-secondary)] leading-relaxed">
          <p class="text-2xl font-semibold text-[var(--text-primary)]">
            Hey there! I'm a {personalInfo.getAge()}-year-old developer who gets <span class="text-cyber-cyan">way too excited</span> about Linux, DevOps magic, system admin wizardry, and everything open source.
          </p>
          
          <p>
            When I'm not neck-deep in Neovim configs or homelabbing the night away, I'm either building <span class="text-cyber-blue font-semibold">blazingly fast backend systems</span> or self-hosting things just because I can.
          </p>

          <p>
            Oh, and I run a <span class="text-neon-green font-semibold">100k+ EDM community</span> on Instagram called{' '}
            <a
              href="https://www.instagram.com/plusxhub/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-cyber-pink underline decoration-cyber-pink/50 hover:decoration-cyber-pink transition-all"
            >
              @plusxhub
            </a>{' '}
            where I share my love for electronic music with the world. Because why not, right?
          </p>

          <div class="pt-8 border-t border-[var(--border-color)]">
            <p class="text-[var(--text-tertiary)] text-base">
              <span class="text-terminal-green font-mono">$</span> Currently @ {experience[0].company} as {experience[0].title}
            </p>
            <p class="text-[var(--text-tertiary)] text-base">
              <span class="text-terminal-blue font-mono">$</span> Studying @ {education[0].institution}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="min-h-screen py-20 px-6">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-4xl md:text-6xl font-black mb-12 cyber-text">Projects</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {projects.map((project) => (
            <article class="group glow-border rounded-xl p-6 bg-[var(--bg-elevated)] hover:bg-[var(--bg-secondary)] transition-all duration-300">
              <div class="flex items-start justify-between mb-4">
                <h3 class="text-2xl font-bold text-[var(--text-primary)] group-hover:text-cyber-cyan transition-colors">
                  {project.title}
                </h3>
                {project.featured && (
                  <span class="px-3 py-1 text-xs font-semibold bg-cyber-blue/20 text-cyber-blue border border-cyber-blue/50 rounded-full">
                    Featured
                  </span>
                )}
              </div>

              <p class="text-[var(--text-secondary)] mb-4">
                {project.description}
              </p>

              <ul class="space-y-2 mb-6">
                {project.highlights.map((highlight) => (
                  <li class="flex items-start gap-2 text-sm text-[var(--text-tertiary)]">
                    <span class="text-terminal-green mt-1">▹</span>
                    <span>{highlight}</span>
                  </li>
                ))}
              </ul>

              <div class="flex flex-wrap gap-2 mb-6">
                {project.technologies.map((tech) => (
                  <span class="px-3 py-1 text-xs font-mono bg-[var(--bg-primary)] border border-[var(--border-color)] rounded text-[var(--text-tertiary)]">
                    {tech}
                  </span>
                ))}
              </div>

              {project.links.github && (
                <a
                  href={project.links.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-cyber-blue hover:text-cyber-cyan transition-colors font-medium"
                >
                  View on GitHub
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section id="experience" class="min-h-screen py-20 px-6 bg-[var(--bg-secondary)]">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-4xl md:text-6xl font-black mb-12 cyber-text">Experience</h2>
        
        <div class="space-y-8">
          {experience.map((job) => (
            <article class="glow-border rounded-xl p-8 bg-[var(--bg-elevated)] relative">
              <!-- Timeline indicator -->
              <div class="absolute -left-3 top-8 w-6 h-6 rounded-full bg-cyber-blue border-4 border-[var(--bg-secondary)] hidden md:block"></div>
              
              <div class="flex flex-wrap items-start justify-between mb-4">
                <div>
                  <h3 class="text-2xl font-bold text-cyber-cyan mb-1">{job.title}</h3>
                  <p class="text-xl text-[var(--text-primary)] font-semibold">{job.company}</p>
                  <p class="text-sm text-[var(--text-tertiary)]">{job.location} • {job.type}</p>
                </div>
                <div class="text-right">
                  <p class="text-sm font-mono text-[var(--text-secondary)]">
                    {new Date(job.startDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })} - {job.current ? 'Present' : job.endDate ? new Date(job.endDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) : 'Present'}
                  </p>
                  {job.current && (
                    <span class="inline-block mt-2 px-3 py-1 text-xs font-semibold bg-neon-green/20 text-neon-green border border-neon-green/50 rounded-full">
                      Current
                    </span>
                  )}
                </div>
              </div>

              <ul class="space-y-3 mb-6">
                {job.responsibilities.map((resp) => (
                  <li class="flex items-start gap-3 text-[var(--text-secondary)]">
                    <span class="text-terminal-green mt-1 flex-shrink-0">▹</span>
                    <span>{resp}</span>
                  </li>
                ))}
              </ul>

              <div class="flex flex-wrap gap-2 mb-4">
                {job.technologies.map((tech) => (
                  <span class="px-3 py-1 text-xs font-mono bg-[var(--bg-primary)] border border-[var(--border-color)] rounded text-[var(--text-tertiary)]">
                    {tech}
                  </span>
                ))}
              </div>

              <div class="flex flex-wrap gap-4 pt-4 border-t border-[var(--border-color)]">
                {job.achievements.map((achievement) => (
                  <div class="flex items-center gap-2">
                    <span class="text-neon-green text-xl">⚡</span>
                    <span class="text-sm font-semibold text-[var(--text-primary)]">{achievement}</span>
                  </div>
                ))}
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Education Section -->
    <section id="education" class="py-20 px-6">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-4xl md:text-6xl font-black mb-12 cyber-text">Education</h2>
        
        {education.map((edu) => (
          <article class="glow-border rounded-xl p-8 bg-[var(--bg-elevated)]">
            <div class="flex flex-wrap items-start justify-between mb-6">
              <div>
                <h3 class="text-2xl font-bold text-cyber-purple mb-2">{edu.degree}</h3>
                <p class="text-xl text-[var(--text-primary)] font-semibold">{edu.institution}</p>
                <p class="text-sm text-[var(--text-tertiary)]">{edu.location}</p>
              </div>
              <div class="text-right">
                <p class="text-sm font-mono text-[var(--text-secondary)]">
                  {new Date(edu.startDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })} - {new Date(edu.endDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
                </p>
                <p class="text-sm text-[var(--text-tertiary)] mt-1">Currently in {edu.year}</p>
              </div>
            </div>

            <div>
              <h4 class="text-sm font-semibold text-[var(--text-secondary)] mb-3">Relevant Coursework:</h4>
              <div class="flex flex-wrap gap-2">
                {edu.coursework.map((course) => (
                  <span class="px-3 py-1 text-sm bg-[var(--bg-primary)] border border-[var(--border-color)] rounded text-[var(--text-tertiary)]">
                    {course}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="min-h-screen py-20 px-6 bg-[var(--bg-secondary)]">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-4xl md:text-6xl font-black mb-12 cyber-text">Skills</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {Object.entries(skills).map(([category, skillList]) => (
            <article class="glow-border rounded-xl p-6 bg-[var(--bg-elevated)]">
              <h3 class="text-xl font-bold text-cyber-cyan mb-4 border-b border-[var(--border-color)] pb-3">
                {category}
              </h3>
              <ul class="space-y-2">
                {skillList.map((skill) => (
                  <li class="flex items-center gap-3">
                    <span class="w-2 h-2 rounded-full bg-terminal-green flex-shrink-0"></span>
                    <span class="text-[var(--text-secondary)] flex-1">{skill.name}</span>
                  </li>
                ))}
              </ul>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 px-6 border-t border-[var(--border-color)]">
      <div class="max-w-7xl mx-auto text-center">
        <p class="text-[var(--text-tertiary)] mb-4">
          Built with <span class="text-cyber-pink">❤</span> using Astro and TailwindCSS
        </p>
        <p class="text-sm text-[var(--text-tertiary)]">
          © {new Date().getFullYear()} Milind Madhukar. All rights reserved.
        </p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Active nav indicator */
  #section-nav a.active {
    background-color: var(--color-cyber-blue);
    transform: scale(1.5);
  }
</style>

<script>
  // Section navigation active state
  const sections = document.querySelectorAll('section[id]');
  const navLinks = document.querySelectorAll('#section-nav a');

  const observerOptions = {
    rootMargin: '-50% 0px -50% 0px',
    threshold: 0
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const id = entry.target.id;
        navLinks.forEach(link => {
          link.classList.remove('active');
          if (link.getAttribute('href') === `#${id}`) {
            link.classList.add('active');
          }
        });
      }
    });
  }, observerOptions);

  sections.forEach(section => observer.observe(section));
</script>
