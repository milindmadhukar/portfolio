---
import Layout from '../layouts/Layout.astro';
import SocialButton from '../components/SocialButton.astro';
import ProjectCard from '../components/ProjectCard.astro';
import ExperienceCard from '../components/ExperienceCard.astro';
import SkillCard from '../components/SkillCard.astro';
import VimCursor from '../components/VimCursor.astro';
import { personalInfo, projects, experience, education, skills } from '../data/portfolio';
---

<Layout>
  <!-- Section Navigator -->
  <nav id="section-nav" class="fixed left-6 top-1/2 -translate-y-1/2 z-40 hidden lg:flex flex-col gap-4">
    <a
      href="#hero"
      class="group relative p-2.5 rounded-lg bg-[var(--bg-elevated)] border border-[var(--border-color)] hover:border-cyber-blue transition-all duration-300 hover-glow"
      aria-label="Go to home section"
    >
      <svg class="w-5 h-5 text-[var(--text-secondary)] group-hover:text-cyber-blue transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      <span class="absolute left-14 top-1/2 -translate-y-1/2 px-3 py-1.5 bg-[var(--bg-elevated)] border border-[var(--border-color)] rounded-lg text-sm font-medium whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none shadow-lg">
        Home
      </span>
    </a>

    <a
      href="#about"
      class="group relative p-2.5 rounded-lg bg-[var(--bg-elevated)] border border-[var(--border-color)] hover:border-cyber-cyan transition-all duration-300 hover-glow"
      aria-label="Go to about section"
    >
      <svg class="w-5 h-5 text-[var(--text-secondary)] group-hover:text-cyber-cyan transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      <span class="absolute left-14 top-1/2 -translate-y-1/2 px-3 py-1.5 bg-[var(--bg-elevated)] border border-[var(--border-color)] rounded-lg text-sm font-medium whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none shadow-lg">
        About
      </span>
    </a>

    <a
      href="#projects"
      class="group relative p-2.5 rounded-lg bg-[var(--bg-elevated)] border border-[var(--border-color)] hover:border-cyber-purple transition-all duration-300 hover-glow"
      aria-label="Go to projects section"
    >
      <svg class="w-5 h-5 text-[var(--text-secondary)] group-hover:text-cyber-purple transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
      </svg>
      <span class="absolute left-14 top-1/2 -translate-y-1/2 px-3 py-1.5 bg-[var(--bg-elevated)] border border-[var(--border-color)] rounded-lg text-sm font-medium whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none shadow-lg">
        Projects
      </span>
    </a>

    <a
      href="#experience"
      class="group relative p-2.5 rounded-lg bg-[var(--bg-elevated)] border border-[var(--border-color)] hover:border-neon-green transition-all duration-300 hover-glow"
      aria-label="Go to experience section"
    >
      <svg class="w-5 h-5 text-[var(--text-secondary)] group-hover:text-neon-green transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      <span class="absolute left-14 top-1/2 -translate-y-1/2 px-3 py-1.5 bg-[var(--bg-elevated)] border border-[var(--border-color)] rounded-lg text-sm font-medium whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none shadow-lg">
        Experience
      </span>
    </a>

    <a
      href="#education"
      class="group relative p-2.5 rounded-lg bg-[var(--bg-elevated)] border border-[var(--border-color)] hover:border-cyber-pink transition-all duration-300 hover-glow"
      aria-label="Go to education section"
    >
      <svg class="w-5 h-5 text-[var(--text-secondary)] group-hover:text-cyber-pink transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
      <span class="absolute left-14 top-1/2 -translate-y-1/2 px-3 py-1.5 bg-[var(--bg-elevated)] border border-[var(--border-color)] rounded-lg text-sm font-medium whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none shadow-lg">
        Education
      </span>
    </a>

    <a
      href="#skills"
      class="group relative p-2.5 rounded-lg bg-[var(--bg-elevated)] border border-[var(--border-color)] hover:border-neon-orange transition-all duration-300 hover-glow"
      aria-label="Go to skills section"
    >
      <svg class="w-5 h-5 text-[var(--text-secondary)] group-hover:text-neon-orange transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
      <span class="absolute left-14 top-1/2 -translate-y-1/2 px-3 py-1.5 bg-[var(--bg-elevated)] border border-[var(--border-color)] rounded-lg text-sm font-medium whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none shadow-lg">
        Skills
      </span>
    </a>
  </nav>

  <!-- Main Container -->
  <main class="relative">
    <!-- Hero Section -->
    <section id="hero" class="min-h-screen flex items-center justify-center relative cyber-grid overflow-hidden">
      <!-- Scanline effect -->
      <div class="scanlines absolute inset-0 pointer-events-none opacity-30"></div>
      
      <!-- Animated background shapes -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-cyber-blue/5 rounded-full blur-3xl animate-pulse-glow"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyber-purple/5 rounded-full blur-3xl animate-pulse-glow" style="animation-delay: 0.5s"></div>
      </div>

      <div class="relative z-10 max-w-6xl mx-auto px-6 py-20 text-center">
        <!-- Terminal-style header -->
        <div class="mb-6 sm:mb-8">
          <p class="text-sm sm:text-base md:text-lg font-mono text-[var(--text-secondary)] mb-2 text-left">
            <span class="text-terminal-green">milind@portfolio</span>:<span class="text-terminal-blue">~</span>$ <span class="terminal-command"></span><span class="terminal-cursor">█</span>
          </p>
        </div>

        <!-- Name with cyber text effect -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-black mb-6 tracking-tight">
          <span class="cyber-text flex flex-col sm:flex-row items-center justify-center sm:gap-2">
            <span class="inline-block">MILIND</span>
            <span class="inline-block flex items-baseline">
              MADHUKAR<VimCursor />
            </span>
          </span>
        </h1>

        <!-- Tagline -->
        <p class="text-lg sm:text-xl md:text-2xl text-[var(--text-secondary)] mb-6 sm:mb-8 font-medium px-4">
          {personalInfo.tagline}
        </p>

        <!-- Bio -->
        <p class="max-w-2xl mx-auto text-base sm:text-lg text-[var(--text-tertiary)] mb-10 sm:mb-12 leading-relaxed px-4">
          {personalInfo.bio.short}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap items-center justify-center gap-3 sm:gap-4 mb-12 sm:mb-16">
          <a
            href="#about"
            class="px-5 sm:px-8 py-2.5 sm:py-3 bg-cyber-blue/10 border-2 border-cyber-blue text-cyber-blue rounded-lg font-semibold hover-glow hover:bg-cyber-blue/20 transition-all duration-300 text-sm sm:text-base"
          >
            About Me
          </a>
          <a
            href="/blog"
            class="px-5 sm:px-8 py-2.5 sm:py-3 bg-cyber-purple/10 border-2 border-cyber-purple text-cyber-purple rounded-lg font-semibold hover-glow hover:bg-cyber-purple/20 transition-all duration-300 text-sm sm:text-base"
          >
            Read My Blog
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex flex-wrap items-center justify-center gap-2 sm:gap-3 md:gap-4">
          {personalInfo.social.map((link) => (
            <SocialButton
              name={link.name}
              url={link.url}
              icon={link.icon}
              color={link.color}
              size="md"
            />
          ))}
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="min-h-screen flex items-center py-20 px-6 bg-[var(--bg-secondary)]">
      <div class="max-w-4xl mx-auto">
        <div class="mb-8">
          <p class="text-xs sm:text-sm font-mono text-[var(--text-tertiary)] mb-2">
            <span class="text-terminal-green">milind@portfolio</span>:<span class="text-terminal-blue">~</span>$ cd about
          </p>
          <h2 class="text-3xl sm:text-4xl md:text-6xl font-black cyber-text flex items-baseline flex-wrap">
            About Me<VimCursor />
          </h2>
        </div>
        
        <div class="space-y-4 sm:space-y-6 text-base sm:text-lg text-[var(--text-secondary)] leading-relaxed">
          <p class="text-xl sm:text-2xl font-semibold text-[var(--text-primary)]">
            Hey there! I'm a {personalInfo.getAge()}-year-old developer who gets <span class="text-cyber-cyan">way too excited</span> about Linux, DevOps magic, system admin wizardry, and everything open source.
          </p>
          
          <p>
            When I'm not neck-deep in Neovim configs or homelabbing the night away, I'm either building <span class="text-cyber-blue font-semibold">blazingly fast backend systems</span> or self-hosting things just because I can.
          </p>

          <p>
            Oh, and I run a <span class="text-neon-green font-semibold">100k+ EDM community</span> on Instagram called{' '}
            <a
              href="https://www.instagram.com/plusxhub/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-cyber-pink underline decoration-cyber-pink/50 hover:decoration-cyber-pink transition-all"
            >
              @plusxhub
            </a>{' '}
            where I share my love for electronic music with the world. Because why not, right?
          </p>

          <div class="pt-8 border-t border-[var(--border-color)]">
            <p class="text-[var(--text-tertiary)] text-base">
              <span class="text-terminal-green font-mono">$</span> Currently @ {experience[0].company} as {experience[0].title}
            </p>
            <p class="text-[var(--text-tertiary)] text-base">
              <span class="text-terminal-blue font-mono">$</span> Studying @ {education[0].institution}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="min-h-screen py-20 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="mb-12">
          <p class="text-xs sm:text-sm font-mono text-[var(--text-tertiary)] mb-2">
            <span class="text-terminal-green">milind@portfolio</span>:<span class="text-terminal-blue">~</span>$ cd projects
          </p>
          <h2 class="text-3xl sm:text-4xl md:text-6xl font-black cyber-text flex items-baseline flex-wrap">
            Projects<VimCursor />
          </h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {projects.map((project) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              highlights={project.highlights}
              technologies={project.technologies}
              githubUrl={project.links.github}
              featured={project.featured}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section id="experience" class="min-h-screen py-20 px-6 bg-[var(--bg-secondary)]">
      <div class="max-w-5xl mx-auto">
        <div class="mb-12">
          <p class="text-xs sm:text-sm font-mono text-[var(--text-tertiary)] mb-2">
            <span class="text-terminal-green">milind@portfolio</span>:<span class="text-terminal-blue">~</span>$ cd experience
          </p>
          <h2 class="text-3xl sm:text-4xl md:text-6xl font-black cyber-text flex items-baseline flex-wrap">
            Experience<VimCursor />
          </h2>
        </div>
        
        <div class="space-y-8">
          {experience.map((job) => (
            <ExperienceCard
              title={job.title}
              company={job.company}
              location={job.location}
              type={job.type}
              startDate={job.startDate}
              endDate={job.endDate}
              current={job.current}
              responsibilities={job.responsibilities}
              technologies={job.technologies}
              achievements={job.achievements}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Education Section -->
    <section id="education" class="py-20 px-6">
      <div class="max-w-5xl mx-auto">
        <div class="mb-12">
          <p class="text-xs sm:text-sm font-mono text-[var(--text-tertiary)] mb-2">
            <span class="text-terminal-green">milind@portfolio</span>:<span class="text-terminal-blue">~</span>$ cd education
          </p>
          <h2 class="text-3xl sm:text-4xl md:text-6xl font-black cyber-text flex items-baseline flex-wrap">
            Education<VimCursor />
          </h2>
        </div>
        
        {education.map((edu) => (
          <article class="glow-border rounded-xl p-8 bg-[var(--bg-elevated)]">
            <div class="flex flex-wrap items-start justify-between mb-6">
              <div>
                <h3 class="text-2xl font-bold text-cyber-purple mb-2">{edu.degree}</h3>
                <p class="text-xl text-[var(--text-primary)] font-semibold">{edu.institution}</p>
                <p class="text-sm text-[var(--text-tertiary)]">{edu.location}</p>
              </div>
              <div class="text-right">
                <p class="text-sm font-mono text-[var(--text-secondary)]">
                  {new Date(edu.startDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })} - {new Date(edu.endDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
                </p>
                <p class="text-sm text-[var(--text-tertiary)] mt-1">Currently in {edu.year}</p>
              </div>
            </div>

            <div>
              <h4 class="text-sm font-semibold text-[var(--text-secondary)] mb-3">Relevant Coursework:</h4>
              <div class="flex flex-wrap gap-2">
                {edu.coursework.map((course) => (
                  <span class="px-3 py-1 text-sm bg-[var(--bg-primary)] border border-[var(--border-color)] rounded text-[var(--text-tertiary)]">
                    {course}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="min-h-screen py-20 px-6 bg-[var(--bg-secondary)]">
      <div class="max-w-7xl mx-auto">
        <div class="mb-12">
          <p class="text-xs sm:text-sm font-mono text-[var(--text-tertiary)] mb-2">
            <span class="text-terminal-green">milind@portfolio</span>:<span class="text-terminal-blue">~</span>$ cd skills
          </p>
          <h2 class="text-3xl sm:text-4xl md:text-6xl font-black cyber-text flex items-baseline flex-wrap">
            Skills<VimCursor />
          </h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {Object.entries(skills).map(([category, skillList]) => (
            <SkillCard category={category} skills={skillList} />
          ))}
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 px-6 border-t border-[var(--border-color)]">
      <div class="max-w-7xl mx-auto">
        <div class="mb-6">
        </div>
        <p class="text-sm text-[var(--text-tertiary)] text-center">
          <span class="text-terminal-blue">©</span> {new Date().getFullYear()} Milind Madhukar. All rights reserved.
        </p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Active nav indicators - using each section's hover color */
  #section-nav a[href="#hero"].active {
    border-color: var(--color-cyber-blue);
    background: oklch(0.7 0.25 250 / 0.15);
  }
  #section-nav a[href="#hero"].active svg {
    color: var(--color-cyber-blue);
  }

  #section-nav a[href="#about"].active {
    border-color: var(--color-cyber-cyan);
    background: oklch(0.75 0.18 195 / 0.15);
  }
  #section-nav a[href="#about"].active svg {
    color: var(--color-cyber-cyan);
  }

  #section-nav a[href="#projects"].active {
    border-color: var(--color-cyber-purple);
    background: oklch(0.65 0.28 290 / 0.15);
  }
  #section-nav a[href="#projects"].active svg {
    color: var(--color-cyber-purple);
  }

  #section-nav a[href="#experience"].active {
    border-color: var(--color-neon-green);
    background: oklch(0.8 0.22 145 / 0.15);
  }
  #section-nav a[href="#experience"].active svg {
    color: var(--color-neon-green);
  }

  #section-nav a[href="#education"].active {
    border-color: var(--color-cyber-pink);
    background: oklch(0.7 0.24 340 / 0.15);
  }
  #section-nav a[href="#education"].active svg {
    color: var(--color-cyber-pink);
  }

  #section-nav a[href="#skills"].active {
    border-color: var(--color-neon-orange);
    background: oklch(0.75 0.20 55 / 0.15);
  }
  #section-nav a[href="#skills"].active svg {
    color: var(--color-neon-orange);
  }
</style>

<script>
  // Terminal typing animation
  document.addEventListener('DOMContentLoaded', () => {
    const commandElement = document.querySelector('.terminal-command') as HTMLElement | null;
    const cursorElement = document.querySelector('.terminal-cursor') as HTMLElement | null;
    const command = 'whoami';
    let charIndex = 0;

    // Type out the command character by character
    function typeCommand() {
      if (commandElement && charIndex < command.length) {
        commandElement.textContent = command.slice(0, charIndex + 1);
        charIndex++;
        setTimeout(typeCommand, 100); // 100ms per character
      } else {
        // Command typing complete, hide cursor
        setTimeout(() => {
          if (cursorElement) {
            cursorElement.style.display = 'none';
          }
        }, 200);
      }
    }

    // Start typing animation
    setTimeout(typeCommand, 500); // Start after 500ms delay
  });

  // Section navigation active state
  const sections = document.querySelectorAll('section[id]');
  const navLinks = document.querySelectorAll('#section-nav a');

  const observerOptions = {
    rootMargin: '-50% 0px -50% 0px',
    threshold: 0
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const id = entry.target.id;
        navLinks.forEach(link => {
          link.classList.remove('active');
          if (link.getAttribute('href') === `#${id}`) {
            link.classList.add('active');
          }
        });
      }
    });
  }, observerOptions);

  sections.forEach(section => observer.observe(section));
</script>
