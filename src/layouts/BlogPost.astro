
---
import Layout from './Layout.astro';
import '../styles/global.css';
import { Image } from 'astro:assets';

const { frontmatter } = Astro.props;
const { title, description, date, author, tags, banner } = frontmatter;

// Format the date
const formattedDate = date ? new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : '';

// Handle banner image if it exists (supports both local Obsidian paths and URLs)
let bannerImage: any = null;
if (banner) {
  // Check if it's a URL (starts with http:// or https://)
  if (banner.startsWith('http://') || banner.startsWith('https://')) {
    bannerImage = banner;
  } else {
    // Handle local Obsidian path (e.g., ./garrix.png or _assets/garrix.png)
    // Get the current file path to determine the slug
    const url = Astro.url.pathname;
    const pathParts = url.split('/').filter(Boolean);
    const slug = pathParts[pathParts.length - 1] || pathParts[pathParts.length - 2];
    
    try {
      const images = import.meta.glob<{ default: ImageMetadata }>('/src/pages/blog/**/_assets/*.{png,jpg,jpeg,gif,webp,svg}', { eager: true });
      const bannerPath = banner.startsWith('./') 
        ? `/src/pages/blog/${slug}/_assets/${banner.slice(2)}`
        : `/src/pages/blog/${slug}/_assets/${banner}`;
      const localImage = images[bannerPath];
      if (localImage) {
        bannerImage = localImage.default;
      }
    } catch (e) {
      console.warn('Banner image not found:', banner);
    }
  }
}
---

<Layout>
  <div class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-900 text-white overflow-y-auto">
    <div class="max-w-4xl mx-auto px-6 py-16">
      <!-- Back to blog link with home icon -->
      <div class="mb-12 flex items-center gap-4">
        <a href="/blog" class="group inline-flex items-center gap-2 text-gray-400 hover:text-purple-400 transition-colors">
          <div class="p-2 rounded-lg bg-gray-800/50 group-hover:bg-purple-900/30 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </div>
          <span class="font-medium">Back to Blog</span>
        </a>
      </div>
      
      <!-- Article header with gradient -->
      <article class="prose prose-invert prose-lg max-w-none">
        <header class="mb-12 pb-8 border-b border-gray-800/50">
          <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent leading-tight">
            {title}
          </h1>
          
          {description && (
            <p class="text-xl md:text-2xl text-gray-400 mb-6 leading-relaxed">
              {description}
            </p>
          )}
          
          {bannerImage && (
            <div class="my-8 -mx-6 md:mx-0 rounded-none md:rounded-2xl overflow-hidden border-0 md:border border-gray-800/50 shadow-2xl shadow-purple-500/10">
              {typeof bannerImage === 'string' ? (
                <img 
                  src={bannerImage} 
                  alt={title}
                  class="w-full h-auto object-cover"
                  loading="eager"
                />
              ) : (
                <Image
                  src={bannerImage}
                  alt={title}
                  width={1200}
                  height={675}
                  class="w-full h-auto object-cover"
                  loading="eager"
                />
              )}
            </div>
          )}
          
          <div class="flex flex-wrap items-center gap-4 text-sm">
            {formattedDate && (
              <div class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <time datetime={date} class="font-medium">{formattedDate}</time>
              </div>
            )}
          </div>
          
          {tags && tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-6">
              {tags.map((tag: string) => (
                <span class="text-sm px-4 py-2 bg-gradient-to-r from-purple-900/50 to-blue-900/50 rounded-full text-purple-300 border border-purple-500/30 font-medium">
                  #{tag}
                </span>
              ))}
            </div>
          )}
        </header>
        
        <!-- Article content with enhanced styling -->
        <div class="blog-content">
          <slot />
        </div>
        
        <!-- Back to blog footer -->
        <footer class="mt-16 pt-8 border-t border-gray-800/50">
          <a href="/blog" class="group inline-flex items-center gap-2 text-purple-400 hover:text-purple-300 transition-colors font-medium">
            <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            View all posts
          </a>
        </footer>
      </article>
    </div>
  </div>
</Layout>

<style is:global>
  /* Override base layout styles for blog posts */
  html, body {
    overflow: visible !important;
    height: auto !important;
  }
  
  /* Blog content styles with enhanced typography */
  .blog-content {
    color: #e5e7eb;
    font-size: 1.125rem;
    line-height: 1.8;
  }
  
  .blog-content h1,
  .blog-content h2,
  .blog-content h3,
  .blog-content h4,
  .blog-content h5,
  .blog-content h6 {
    color: white;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
    background: linear-gradient(to right, #60a5fa, #a78bfa);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .blog-content h1 { font-size: 2.25rem; }
  .blog-content h2 { font-size: 1.875rem; }
  .blog-content h3 { font-size: 1.5rem; }
  .blog-content h4 { font-size: 1.25rem; }
  
  .blog-content p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }
  
  .blog-content a {
    color: #a78bfa;
    text-decoration: underline;
    text-decoration-color: #a78bfa40;
    text-underline-offset: 3px;
    transition: all 0.2s;
  }
  
  .blog-content a:hover {
    color: #c4b5fd;
    text-decoration-color: #a78bfa;
  }
  
  .blog-content img {
    border-radius: 1rem;
    margin-top: 3rem;
    margin-bottom: 3rem;
    width: 100%;
    height: auto;
    border: 1px solid #374151;
    box-shadow: 0 20px 50px rgba(139, 92, 246, 0.1);
  }
  
  .blog-content ul,
  .blog-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .blog-content li {
    margin-bottom: 0.75rem;
    padding-left: 0.5rem;
  }
  
  .blog-content ul li {
    list-style-type: none;
    position: relative;
  }
  
  .blog-content ul li::before {
    content: "â–¹";
    position: absolute;
    left: -1.5rem;
    color: #a78bfa;
    font-weight: bold;
  }
  
  .blog-content ol li {
    list-style-type: decimal;
    list-style-position: outside;
    color: #a78bfa;
  }
  
  .blog-content ol li::marker {
    color: #a78bfa;
    font-weight: bold;
  }
  
  .blog-content code {
    background: linear-gradient(to right, #1f2937, #111827);
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.9em;
    color: #fbbf24;
    border: 1px solid #374151;
    font-family: 'Courier New', monospace;
  }
  
  .blog-content pre {
    background: linear-gradient(135deg, #111827, #1f2937);
    padding: 1.5rem;
    border-radius: 1rem;
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid #374151;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  }
  
  .blog-content pre code {
    background: transparent;
    padding: 0;
    border: none;
    color: #e5e7eb;
    box-shadow: none;
  }
  
  .blog-content blockquote {
    border-left: 4px solid #a78bfa;
    padding-left: 1.5rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    font-style: italic;
    color: #d1d5db;
    margin: 2rem 0;
    background: linear-gradient(to right, #1f293710, transparent);
    border-radius: 0 0.5rem 0.5rem 0;
  }
  
  .blog-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
    border: 1px solid #374151;
  }
  
  .blog-content th,
  .blog-content td {
    border: 1px solid #374151;
    padding: 0.75rem 1rem;
    text-align: left;
  }
  
  .blog-content th {
    background: linear-gradient(to bottom, #1f2937, #111827);
    font-weight: 700;
    color: #a78bfa;
  }
  
  .blog-content tr:nth-child(even) {
    background: #1f293710;
  }
  
  .blog-content hr {
    border: none;
    height: 1px;
    background: linear-gradient(to right, transparent, #374151, transparent);
    margin: 3rem 0;
  }
  
  .blog-content strong {
    color: #f3f4f6;
    font-weight: 700;
  }
  
  .blog-content em {
    color: #d1d5db;
  }
</style>

