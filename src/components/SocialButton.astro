// Map color names to CSS variable names
const colorVars: Record<string, string> = {
  'cyber-blue': '--color-cyber-blue',
  'cyber-purple': '--color-cyber-purple',
  'cyber-pink': '--color-cyber-pink',
  'cyber-cyan': '--color-cyber-cyan',
  'cyber-white': '--color-cyber-white',
  'neon-green': '--color-neon-green',
  'neon-orange': '--color-neon-orange',
};

const colorVar = colorVars[color] || '--color-cyber-blue';
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="group px-6 py-3 rounded-lg border border-[var(--border-color)] bg-[var(--bg-elevated)] transition-all duration-300 hover-glow social-button"
  style={`--button-color: var(${colorVar})`}
  aria-label={name}
>
  <div class="flex items-center gap-3">
    {iconSVGs[icon] ? (
      <svg class="w-5 h-5 text-[var(--text-secondary)] transition-colors flex-shrink-0 social-icon" fill="currentColor" viewBox="0 0 24 24">
        <path d={iconSVGs[icon]} />
      </svg>
    ) : (
      <span class="w-5 h-5 flex-shrink-0"></span>
    )}
    <span class="text-sm font-medium text-[var(--text-secondary)] transition-colors social-text">
      {name}
    </span>
    {description && (
      <span class="text-xs text-[var(--text-tertiary)]">({description})</span>
    )}
  </div>
</a>

<style>
  .social-button:hover {
    border-color: var(--button-color);
  }
  
  .social-button:hover .social-icon,
  .social-button:hover .social-text {
    color: var(--button-color);
  }
</style>
